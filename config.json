{
  "app_name": "Auralis",
  "version": "1.0.0",
  "launch_command": "auralis",
  "description": "Auralis is a terminal-based AI assistant leveraging HuggingFace APIs for STT, NLP, and TTS. Provides natural conversation, push-to-talk, wake word detection, screen reading/control, offline lightweight operation, minimal CPU/GPU usage, storage under 100MB.",
  "constraints": {
    "budget": "$0",
    "storage_limit": "<100MB",
    "CPU_GPU_low_usage": true,
    "offline_first": true,
    "terminal_launch": true,
    "natural_voice_conversation": true,
    "push_to_talk_supported": true,
    "screen_reading_control": true,
    "logs_minimized": true,
    "voice_response_real_time": true,
    "cross_platform": true,
    "RAM_max": "2GB",
    "CPU_max": "dual-core 1.5GHz"
  },
  "platforms": {
    "supported_os": ["Windows 10+", "macOS 11+", "Linux Ubuntu 20.04+"],
    "core_language": "Python 3.11+",
    "terminal_interface": {
      "display_mode": "ASCII terminal with real-time waveform, status indicators, scrolling output",
      "themes": ["dark","light"],
      "fonts": ["monospace"],
      "visual_elements": ["status_bar","waveform_visualization","prompt_text","scrollable output","error messages","mini-progress bars","interactive hints"]
    }
  },
  "offline_mode": {
    "description": "Casual conversation, screen reading, and control without internet",
    "STT_engine": {"type":"Vosk tiny","size":"~20MB","cpu_only":true,"push_to_talk":true,"wake_word_support":true,"latency_ms":"<100"},
    "NLP_engine": {"type":"TinyGPT","size":"~50MB","CPU_only":true,"context_window":3,"conversational_replies":true,"fallback_strategy":"simplified responses if context exceeds memory"},
    "TTS_engine": {"type":"espeak-ng","size":"~5MB","CPU_only":true,"voices":["male","female","neutral"],"speed_range":"0.9x-1.2x","pitch_range":"-3 to +3","volume_range":"0-100%","preset_profiles":["formal","casual","energetic"]},
    "OCR_engine": {"type":"Tesseract minimal","size":"~20MB","capabilities":["read text","summarize","highlight keywords","convert to speech","recognize tables","search text","capture region"]},
    "conversation_flow": {"wake_word":"Auralis","push_to_talk":true,"continuous_listening":false,"interruption_support":true,"voice_response_enabled":true},
    "performance":{"lazy_loading":true,"low_thread_usage":true,"idle_sleep":true,"RAM_max":"2GB","CPU_max":"15%","GPU_usage":"optional <5%"}
  },
  "online_mode": {
    "description": "Enhanced reasoning, multi-turn dialogue, creative output using HuggingFace APIs",
    "STT":"Whisper",
    "NLP":"GPT-based conversational model",
    "TTS":"HiFi-GAN/WaveNet vocoder",
    "fallback":"auto-switch to offline if API fails",
    "conversation_features":["multi-turn dialogue","translation","creative content generation","long-term memory","context-aware responses"],
    "performance":{"async_API_requests":true,"low_bandwidth_mode":true,"idle_sleep_between_requests":true}
  },
  "voice_interface": {
    "wake_word":{"engine":"Porcupine ultra-light","phrase":"Auralis","sensitivity":"medium","always_on":false,"hotkey":"configurable","latency_ms":"<100","feedback_icon":"mic ON/OFF ASCII icon"},
    "conversation_flow":{"interruption_support":true,"context_window":3,"voice_feedback":true,"terminal_visual_feedback":"ASCII waveform","natural_conversational_replies":true,"fallback_to_text":"if TTS fails"},
    "voice_customization":{"voices":["male_default","female_default","neutral"],"speed_range":"0.9x-1.2x","pitch_range":"-3 to +3","volume_range":"0-100%","preset_profiles":["formal","casual","energetic"]}
  },
  "screen_interaction": {
    "screen_reading":{"engine":"Tesseract OCR","capabilities":["read text","summarize","highlight keywords","convert to speech","recognize tables","search text","capture region"],"commands":["Read screen section","Summarize content","Extract highlighted text","Convert screen text to audio","Search screen for keywords"]},
    "screen_control":{"engine":"PyAutoGUI","capabilities":["mouse movement","clicks","drag-drop","keyboard typing","window management","automation scripts","confirmation prompts","coordinate/UI element interaction"]}
  },
  "terminal_ui_ux": {
    "boot_sequence":{"ASCII_animation_frames":["[*        ] Initializing core...","[**       ] Loading offline models...","[***      ] Activating voice interface...","[****     ] Preparing screen modules...","[*****    ] Optimizing CPU/GPU footprint...","[******   ] Calibrating microphone...","[*******  ] Warming up NLP interpreter...","[******** ] Ready..."],"status_bar_elements":["mic_status","mode_indicator","cpu_usage","network_status"],"final_prompt":"Auralis ready. Press [SPACE] to talk or type a command."},
    "idle_screen":{"visual_style":"minimal terminal","hint_text":"Hold [SPACE] to talk or type 'help'","background_mode":"dark default, toggleable","micro_animation":"pulse around hint every 2s"},
    "push_to_talk_flow":{"key":"SPACE","ui_feedback":["mic ON icon","ASCII waveform","status 'LISTENING...'"],"transcribing_state":{"indicator":"Processing...","thinking_animation":"dots cycling"},"interrupt_logic":"SPACE or 'Stop' halts TTS/STT"},
    "text_input_flow":{"auto_suggest":true,"submit_key":"ENTER","post_submit_animation":"thinking dots"},
    "voice_response_ui":{"pre_speech":"display 'Speaking...' with audio icon","text_display_modes":["live transcription","post-speech display"]},
    "screen_reading_ui":{"activation":"voice or text","scanning_animation":"ASCII scan-line","post_read_options":["Repeat","Summarize","Save text","Speak again"]},
    "screen_control_ui":{"confirmation_prompt":"Execute action? (Y/N)","timeout_s":4,"execution_feedback":"Action done."},
    "error_handling":{"misheard_voice":"Did you mean: [X]?","unknown_command":"Unknown command. Say 'help'.","OCR_failure":"Screen unreadable. Try again.","action_denied":"Mouse control disabled."},
    "help_panel":{"categories":["Voice Commands","Screen Reading","Screen Control","Text Queries","Settings","Plugins"],"navigation":"arrow keys, numbers, voice selection","examples":"inline one-line"},
    "settings_panel":{"categories":["Voice Input","Wake Word","Theme","Online/Offline Mode","Memory Settings","Permissions"],"interaction":"ENTER to toggle, left/right to adjust sliders, 'q' to exit"},
    "theme":{"dark_mode":{"background":"#000","text_color":"#CCC","highlight":"#FFF"},"light_mode":{"background":"#FFF","text_color":"#333","highlight":"#000"},"toggle_command":"theme toggle or voice 'toggle theme'"},
    "output_minimization":{"pagination":"SPACE to scroll","summary_prompt":"Show summary if >10 lines","clear_screen":"clear or cls"}
  },
  "conversation_memory":{"short_term":{"location":"RAM","max_turns":3},"long_term":{"optional":"encrypted SQLite","purpose":"persistent notes, history, preferences"}},
  "logging_storage":{"conversation_logs":{"format":"JSON","compression":"gzip","rotation_policy":"1MB or 7 days","privacy":"user can clear anytime"},"model_storage":{"STT":"~20MB","NLP":"~50MB","TTS":"~5MB","OCR":"~20MB"},"optimization":{"lazy_load_modules":true,"CPU/GPU_low_intensity":true,"delete_temp_files":true}},
  "security_privacy":{"permissions":["microphone","keyboard/mouse optional"],"offline_privacy":"100% local processing","online_security":["HTTPS API calls","optional API key encryption"],"user_control":["pause","clear logs","toggle offline/online","custom wake word","disable microphone/screen control"]},
  "extensibility":{"plugin_system":{"user_scripts":"Python <1MB dynamically loadable","examples":["calculator","weather","automation"]}},
  "performance_requirements":{"minimum":{"RAM":"2GB","CPU":"dual-core 1.5GHz","GPU":"optional"},"optimization_strategies":["lazy-load","idle sleep","sub-100ms wake word response","compress logs","memory-efficient caching","CPU/GPU-efficient inference","offline-prioritized execution"]},
  "example_commands":{"voice":["Auralis, what time is it?","Auralis, read screen","Auralis, summarize output","Auralis, close window","Auralis, search screen for 'error'","Auralis, open browser and go to 'example.com'","Auralis, tell me a joke","Auralis, explain this output"],"chat":["Explain basic math","Tell a joke","Translate 'Hola' to English","Summarize last terminal output","Open browser","Define 'quantum computing'","Provide a summary of this document"]},
  "settings_and_persistence": {
    "config_file": "~/.auralis/config.json",
    "default_settings": {
      "offline_enabled": true,
      "hf_api_key": null,
      "tts_voice_profile": "male_default",
      "wakeword_enabled": true,
      "push_to_talk_key": "SPACE",
      "log_level": "INFO",
      "long_term_memory_enabled": false,
      "auto_confirm_screen_actions": false
    }
  }
}
